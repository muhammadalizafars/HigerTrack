@using HigerTrack.ViewModels;
@model VerifyEmailViewModel;

@{
    ViewData["Title"] = "Verify Email";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="login-wrapper">
    <div class="login-card">
        <div class="logo-container text-center">
            <img src="~/img/Logo/LogoHigertrack.PNG" alt="Logo" class="logo-img" />
            <h2 class="login-title">Verify Email</h2>
        </div>

        <form asp-action="VerifyEmail" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-2"></div>

            <input asp-for="Email" class="form-control form-input" placeholder="Email Address" />
            <span asp-validation-for="Email" class="text-danger small"></span>

            <button type="submit" class="btn btn-login w-100 mt-3">Verify</button>

            <div class="text-center mt-3">
                <a asp-controller="Account" asp-action="Login" class="link-blue">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial.cshtml");
    }
}
