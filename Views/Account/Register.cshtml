﻿@using HigerTrack.ViewModels;
@model RegisterViewModel;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<link rel="stylesheet" href="~/css/login.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />


<div class="login-wrapper">
    <div class="login-card">
        <div class="logo-container text-center">
            <img src="~/img/Logo/LogoHigertrack.PNG" alt="Logo" class="logo-img" />
            <h2 class="login-title">Register Form</h2>
        </div>

        <div class="toggle-btn-group mb-4">
            <a asp-action="Login" class="toggle-btn">Login</a>
            <span class="toggle-btn active">Register</span>
        </div>

        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger text-center mb-2"></div>

            <input asp-for="Name" class="form-control form-input" placeholder="Full Name" />
            <span asp-validation-for="Name" class="text-danger small"></span>

            <input asp-for="Email" class="form-control form-input" placeholder="Email" />
            <span asp-validation-for="Email" class="text-danger small"></span>

            <div class="password-wrapper mt-3">
                <input asp-for="Password" type="password" class="form-control form-input" placeholder="Password"
                    id="registerPassword" />
                <span class="toggle-password" onclick="toggleRegisterPassword()">
                    <i id="toggleRegisterIcon" class="fa fa-eye-slash"></i>
                </span>
            </div>
            <span asp-validation-for="Password" class="text-danger small"></span>

            <div class="password-wrapper mt-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control form-input"
                    placeholder="Confirm Password" id="confirmPassword" />
                <span class="toggle-password" onclick="toggleConfirmPassword()">
                    <i id="toggleConfirmIcon" class="fa fa-eye-slash"></i>
                </span>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>

            <button type="submit" class="btn btn-login w-100 mt-3">Register</button>

            <div class="text-center mt-2">
                <a asp-controller="Account" asp-action="Login" class="link-blue">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        function toggleRegisterPassword() {
            const passwordInput = document.getElementById("registerPassword");
            const toggleIcon = document.getElementById("toggleRegisterIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("fa-eye-slash");
                toggleIcon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("fa-eye");
                toggleIcon.classList.add("fa-eye-slash");
            }
        }

        function toggleConfirmPassword() {
            const passwordInput = document.getElementById("confirmPassword");
            const toggleIcon = document.getElementById("toggleConfirmIcon");

            if (passwordInput.type === "password") {
                passwordInput.type = "text";
                toggleIcon.classList.remove("fa-eye-slash");
                toggleIcon.classList.add("fa-eye");
            } else {
                passwordInput.type = "password";
                toggleIcon.classList.remove("fa-eye");
                toggleIcon.classList.add("fa-eye-slash");
            }
        }
    </script>

    @await Html.PartialAsync("_ValidationScriptsPartial.cshtml")
}
