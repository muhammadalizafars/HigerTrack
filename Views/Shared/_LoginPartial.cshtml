@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;


<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
</head>





<nav class="navmenu">
    <ul>
        <li>
            <a class="fw-bold text-white" asp-controller="Home" asp-action="Index">Home</a>
        </li>

        @if (User.IsInRole("Admin"))
        {
            <li class="nav-item">
                <a class="fw-bold text-white" asp-controller="Home" asp-action="Admin">
                    <i class="bi bi-shield-lock-fill me-1" style="font-size: 1.1rem;"></i> Admin
                </a>
            </li>
        }

        @if (User.IsInRole("User"))
        {
            <li class="nav-item">
                <a class="fw-bold text-white" asp-controller="Home" asp-action="User">
                    <i class="bi bi-person-fill me-1" style="font-size: 1.1rem;"></i> User
                </a>
            </li>
        }

        @if (User.Identity.IsAuthenticated)
        {
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post" class="logout-form d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="fw-bold text-white bg-transparent border-0 p-0">
                        <i class="bi bi-box-arrow-right me-1" style="font-size: 1.1rem;"></i> Logout
                    </button>
                </form>
            </li>
        }
        else
        {
            <li>
                <a class="fw-bold text-white" asp-controller="Account" asp-action="Login">
                    <i class="bi bi-person-fill me-2" style="font-size: 1.1rem;"></i> Login
                </a>
            </li>
        }
    </ul>
</nav>
