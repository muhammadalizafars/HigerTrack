@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f5f5f5;
    }

    .main-content {
        padding: 18px 0 0 0;
        max-width: 1300px;
        margin: 0 auto;
    }

    #map {
        width: 100%;
        height: 500px;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.10);
        margin-bottom: 18px;
        min-height: 320px;
        background: #e3eaff;
    }

    .custom-table-container {
        padding: 0;
    }

    .title-box {
        background: linear-gradient(90deg, #007bff 60%, #00c6fb 100%);
        color: white;
        padding: 12px 16px;
        font-weight: bold;
        margin-bottom: 0;
        border-radius: 10px 10px 0 0;
        font-size: 1.05rem;
        letter-spacing: 0.5px;
        display: flex;
        align-items: center;
        gap: 8px;
        box-shadow: 0 2px 8px rgba(0, 123, 255, 0.08);
    }

    .table-responsive {
        width: 100%;
        overflow-x: auto;
        background: white;
        border-radius: 0 0 10px 10px;
        box-shadow: 0 2px 16px rgba(0, 0, 0, 0.08);
        margin-bottom: 18px;
        transition: box-shadow 0.2s;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        min-width: 600px;
    }

    .custom-table th,
    .custom-table td {
        padding: 13px 10px;
        border: 1px solid #e3e3e3;
        text-align: left;
        transition: background 0.2s;
        font-size: 0.98rem;
    }

    .custom-table tbody tr:hover {
        background: #f1f7ff;
    }

    .custom-table th {
        background-color: #f8f9fa;
        font-weight: 600;
        letter-spacing: 0.2px;
    }

    @@media (max-width: 700px) {
        .main-content {
            max-width: 100vw;
            padding: 10px 0 0 0;
        }

        #map {
            height: 180px;
            min-height: 100px;
        }

        .title-box {
            font-size: 0.98rem;
            padding: 10px 10px;
        }

        .custom-table th,
        .custom-table td {
            padding: 10px 6px;
            font-size: 0.93rem;
        }

        .table-responsive {
            border-radius: 0 0 8px 8px;
        }

        .custom-table {
            min-width: 420px;
        }
    }

    @@media (max-width: 480px) {
        .main-content {
            padding: 4px 0 0 0;
        }

        .title-box {
            font-size: 0.93rem;
            padding: 8px 6px;
        }

        .custom-table th,
        .custom-table td {
            padding: 8px 4px;
            font-size: 0.89rem;
        }

        .custom-table {
            min-width: 320px;
        }
    }
</style>



<div class="main-content">
    <div id="map"></div>
    <div class="custom-table-container">
        <div class="title-box"><span>ðŸ“‹</span> Data Marker</div>
        <div class="table-responsive">
            <table class="custom-table" id="markerTable">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Nama Pengirim</th>
                        <th>Point</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>foto</th>
                        <th>deskripsi</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Marker data will be inserted here by JS -->
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Script Google Map -->
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap"></script>
<script>
    let markers = [];
    let map;

    function initMap() {
        var center = { lat: -6.914744, lng: 107.609810 };
        map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: center

        });

        // map.addListener('click', function (e) {
        //     addMarker(e.latLng);
        // });
    }

    // function addMarker(location) {
    //     const marker = new google.maps.Marker({
    //         position: location,
    //         map: map
    //     });
    //     markers.push(marker);
    //     updateTable();
    // }

    function updateTable() {
        const tbody = document.querySelector('#markerTable tbody');

        tbody.innerHTML = '';
        markers.forEach((marker, idx) => {
            const lat = marker.getPosition().lat().toFixed(6);
            const lng = marker.getPosition().lng().toFixed(6);
            const row = `<tr><td>${idx + 1}</td><td>${lat}</td><td>${lng}</td></tr>`;
            tbody.insertAdjacentHTML('beforeend', row);
        });
    }

    window.onload = initMap;
</script>
