@model IEnumerable<HigerTrack.Models.MapPoint>
@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f7f6;
    }

    .main-content {
        padding: 18px 0 0 0;
        max-width: 2000px;
        margin: 0 auto;
    }

    #map {
        width: 100%;
        height: 500px;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.10);
        margin-bottom: 18px;
        min-height: 320px;
        background: #e3eaff;
    }

    .custom-table-container {
        margin-top: 24px;
        font-family: 'Segoe UI', sans-serif;
    }

    .title-box {
        background: #3169aa;
        color: #fff;
        padding: 10px 18px;
        font-weight: 600;
        font-size: 1.05rem;
        display: flex;
        align-items: center;
        border-radius: 6px 6px 0 0;
        box-shadow: none;
        letter-spacing: 0.4px;
    }

    .table-responsive {
        background: white;
        border-radius: 0 0 6px 6px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
    }

    .custom-table th {
        background-color: #f2f5f8;
        font-weight: 600;
        text-align: center;
        padding: 12px 8px;
        border: 1px solid #ddd;
        white-space: nowrap;
    }

    .custom-table td {
        padding: 12px 8px;
        border: 1px solid #eee;
        vertical-align: middle;
        white-space: nowrap;
        text-align: center;
    }

    .custom-table tbody tr:hover {
        background: #e8f4ff;
    }


    @@media (max-width: 700px) {
        .main-content {
            max-width: 100vw;
            padding: 10px 8px 0 8px;
        }

        #map {
            height: 220px;
            min-height: 500px;
            border-radius: 10px;
        }

        .title-box {
            font-size: 0.95rem;
            padding: 10px 12px;
            border-radius: 8px 8px 0 0;
        }

        .custom-table th,
        .custom-table td {
            padding: 10px 8px;
            font-size: 0.92rem;
            white-space: nowrap;
        }

        .table-responsive {
            border-radius: 0 0 8px 8px;
            overflow-x: auto;
        }

        .custom-table {
            min-width: 560px;
        }
    }

    @@media (max-width: 480px) {
        .main-content {
            padding: 6px 6px 0 6px;
        }

        .title-box {
            font-size: 0.90rem;
            padding: 8px 10px;
        }

        .custom-table th,
        .custom-table td {
            padding: 8px 6px;
            font-size: 0.88rem;
        }

        .custom-table {
            min-width: 480px;
        }

        #map {
            height: 400px;
        }
    }
</style>



<div class="main-content">
    <div id="map"></div>
    <div class="custom-table-container ">
        <div class="title-box"><span>ðŸ“‹</span> Data Marker</div>
        <div class="table-responsive">
            <table class="custom-table" id="markerTable">
                <thead>
                    <tr>
                        <th>No</th>
                        <th>Username</th>
                        <th>Point</th>
                        <th>Latitude</th>
                        <th>Longitude</th>
                        <th>foto</th>
                        <th>deskripsi</th>
                    </tr>
                </thead>
                <tbody>
                @if (Model != null)
                {
                    int no = 1;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@no</td>
                            <td>@item.CreatedUser?.FullName</td>
                            <td>@item.Title</td>
                            <td>@item.Latitude</td>
                            <td>@item.Longitude</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="@item.ImageUrl" alt="Foto" style="max-width:60px;max-height:60px;" />
                                }
                            </td>
                            <td>@item.Description</td>
                        </tr>
                        no++;
                    }
                }
                </tbody>
            </table>
        </div>
    </div>
</div>


<!-- Script Google Map -->
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap"></script>
<script>
    let markers = [];
    let map;

    function initMap() {
        var center = { lat: -6.914744, lng: 107.609810 };
        map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: center

        });

        // map.addListener('click', function (e) {
        //     addMarker(e.latLng);
        // });
    }

    // function addMarker(location) {
    //     const marker = new google.maps.Marker({
    //         position: location,
    //         map: map
    //     });
    //     markers.push(marker);
    //     updateTable();
    // }

    function updateTable() {
        const tbody = document.querySelector('#markerTable tbody');

        tbody.innerHTML = '';
        markers.forEach((marker, idx) => {
            const lat = marker.getPosition().lat().toFixed(6);
            const lng = marker.getPosition().lng().toFixed(6);
            const row = `<tr><td>${idx + 1}</td><td>${lat}</td><td>${lng}</td></tr>`;
            tbody.insertAdjacentHTML('beforeend', row);
        });
    }

    window.onload = initMap;
</script>
