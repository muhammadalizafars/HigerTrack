@{
    ViewData["Title"] = "User Page";
}

<style>
    body {
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background-color: #f4f7f6;
    }

    .main-content {
        padding: 18px 0 0 0;
        max-width: 2000px;
        margin: 0 auto;
        margin-bottom: 90px;
    }

    #map {
        width: 100%;
        height: 500px;
        border-radius: 12px;
        box-shadow: 0 4px 24px rgba(0, 0, 0, 0.10);
        margin-bottom: 18px;
        margin-top: 90px;
        min-height: 320px;
        background: #e3eaff;
    }

    .title-box {
        background: #161643;
        color: #fff;
        padding: 15px 18px;
        font-weight: 600;
        font-size: 1.05rem;
        display: flex;
        align-items: center;
        border-radius: 6px 6px 0 0;
        box-shadow: none;
        letter-spacing: 0.4px;
    }

    .border {
        border: 1px solid #dee2e6;
        padding: 16px;
        margin-bottom: 16px;
        background-color: #fff;
    }

    .custom-table-container {
        margin-top: 0;
        font-family: 'Segoe UI', sans-serif;
    }

    .search-add-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        flex-wrap: wrap;
        margin: 12px 0;
        gap: 10px;
    }

    .show-entries label {
        font-size: 0.9rem;
        display: flex;
        align-items: center;
        gap: 6px;
    }

    #entriesSelect {
        width: auto;
        min-width: 70px;
        font-size: 0.9rem;
    }

    .search-add-actions {
        display: flex;
        align-items: center;
        gap: 10px;
    }

    .search-add-actions input#searchInput {
        width: 220px;
        max-width: 100%;
        font-size: 0.9rem;
        padding: 6px 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    .search-add-actions button#btnTambahData {
        font-size: 0.9rem;
        padding: 6px 12px;
        border-radius: 4px;
    }

    .table-responsive {
        background: white;
        border-radius: 0 0 6px 6px;
        box-shadow: 0 1px 4px rgba(0, 0, 0, 0.08);
        overflow-x: auto;
    }

    .custom-table {
        width: 100%;
        border-collapse: collapse;
        font-size: 0.95rem;
    }

    .custom-table th {
        background-color: #f2f5f8;
        font-weight: 600;
        text-align: center;
        padding: 12px 8px;
        border: 1px solid #ddd;
        white-space: nowrap;
        color: #000 !important;
    }

    .custom-table td {
        padding: 12px 8px;
        border: 1px solid #eee;
        vertical-align: middle;
        white-space: nowrap;
        text-align: center;
    }

    .custom-table tbody tr:hover {
        background: #e8f4ff;
    }

    /* ======================== Pagination ======================== */
    .pagination-container {
        display: flex;
        justify-content: center;
        margin-top: 16px;
    }

    .pagination {
        margin: 0;
    }

    .pagination .page-item .page-link {
        color: #161643;
        font-size: 0.9rem;
        padding: 6px 12px;
        margin: 0 2px;
        border-radius: 4px;
        border: 1px solid #ddd;
        transition: background-color 0.2s, color 0.2s;
    }

    .pagination .page-item.active .page-link {
        background-color: #161643;
        color: #fff;
        border-color: #161643;
    }

    .pagination .page-item.disabled .page-link {
        color: #999;
        pointer-events: none;
        background-color: #f9f9f9;
    }

    /* ======================== Responsive ======================== */
    @@media (max-width: 700px) {
        .main-content {
            max-width: 100vw;
            padding: 10px 8px 0 8px;
            margin-bottom: 100px;
        }

        #map {
            height: 220px;
            min-height: 500px;
            border-radius: 10px;
            margin-top: 90px;
        }

        .title-box {
            font-size: 0.95rem;
            padding: 10px 12px;
            border-radius: 8px 8px 0 0;
        }

        .table-responsive {
            border-radius: 0 0 8px 8px;
            overflow-x: auto;
            margin-bottom: 80px;
        }

        .custom-table {
            min-width: 560px;
        }

        .search-add-container {
            flex-direction: column;
            align-items: stretch;
        }

        .search-add-actions {
            flex-direction: column;
            align-items: stretch;
            width: 100%;
        }

        .search-add-actions input,
        .search-add-actions button {
            width: 100%;
        }

        .show-entries {
            width: 100%;
            text-align: left;
            margin-bottom: 10px;
        }

        .pagination-container {
            justify-content: center;
        }

        .pagination .page-link {
            padding: 5px 10px;
            font-size: 0.85rem;
        }
    }

    @@media (max-width: 480px) {
        .main-content {
            padding: 6px 6px 0 6px;
            margin-bottom: 100px;
        }

        .title-box {
            font-size: 0.90rem;
            padding: 8px 10px;
        }

        .custom-table th,
        .custom-table td {
            padding: 8px 6px;
            font-size: 0.88rem;
        }

        .custom-table {
            min-width: 480px;
        }

        #map {
            height: 400px;
        }

        .pagination .page-link {
            font-size: 0.8rem;
            padding: 4px 8px;
        }
    }
</style>


<div class="main-content">
    <div id="map"></div>

    <div class="title-box">
        <i class="bi bi-person-fill me-2"></i> Data Marker User
    </div>

    <div class="border">
        <div class="custom-table-container">

            <div class="search-add-container">
                <div class="show-entries">
                    <label>
                        Show
                        <select id="entriesSelect" class="form-select form-select-sm d-inline-block"
                            style="width: auto;">
                            <option value="10">10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        entri
                    </label>
                </div>

                <div class="search-add-actions d-flex gap-2">
                    <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Cari..."
                        style="width: 200px;">
                    <button class="btn btn-success btn-sm" id="btnTambahData">
                        <i class="bi bi-plus-circle me-1"></i> Tambah Marker
                    </button>
                </div>
            </div>

            <div class="table-responsive">
                <table class="custom-table table table-striped table-bordered text-dark" id="markerTable">
                    <thead class="table-dark">
                        <tr>
                            <th>No</th>
                            <th>Username</th>
                            <th>Point</th>
                            <th>Latitude</th>
                            <th>Longitude</th>
                            <th>Foto</th>
                            <th>Deskripsi</th>
                            <th>Aksi</th>
                        </tr>
                    </thead>
                </table>
                <div class="pagination-container">
                    <nav>
                        <ul class="pagination justify-content-center">
                            <li class="page-item disabled">
                                <a class="page-link">Previous</a>
                            </li>
                            <li class="page-item active">
                                <a class="page-link" href="#">1</a>
                            </li>
                            <li class="page-item">
                                <a class="page-link" href="#">Next</a>
                            </li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>






