@{
    ViewData["Title"] = "User Page";
}


<head>
    <link rel="stylesheet" href="~/css/home.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap"
        async defer></script>
    <script src="~/js/home.js"></script>
</head>

<style>
</style>

<div class="main-content">
    <div id="map"></div>

    <div class="title-box">
        <i class="bi bi-shield-lock-fill me-1"></i> Data Marker Admin
    </div>

    <div class="border">
        <div class="custom-table-container">

            <div class="search-add-container">
                <div class="show-entries">
                    <label>
                        Show
                        <select id="entriesSelect" class="form-select form-select-sm d-inline-block"
                            style="width: auto;">
                            <option value="10">1</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100">100</option>
                        </select>
                        entri
                    </label>
                </div>

                <div class="search-add-actions d-flex gap-2">
                    <input type="text" id="searchInput" class="form-control form-control-sm" placeholder="Cari..."
                        style="width: 200px;">

                    <!-- Tombol Search -->
                    <button class="btn btn-primary btn-sm" id="btnSearch">
                        <i class="bi bi-search me-1"></i> Cari
                    </button>

                    <!-- Tombol Tambah -->
                    <button class="btn btn-success btn-sm" id="btnTambahData">
                        <i class="bi bi-plus-circle me-1"></i> Tambah Marker
                    </button>
                </div>


                <div class="table-responsive">
                    <table class="custom-table" id="markerTable">
                        <thead>
                            <tr>
                                <th>No</th>
                                <th>Username</th>
                                <th>Point</th>
                                <th>Latitude</th>
                                <th>Longitude</th>
                                <th>Foto</th>
                                <th>Deskripsi</th>
                                <th>Aksi</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null)
                            {
                                int no = 1;
                                foreach (var item in Model)
                                {
                                    var modalId = "editModal" + item.Id;
                                    <tr>
                                        <td>@no</td>
                                        <td>@item.CreatedUser?.FullName</td>
                                        <td>@item.Title</td>
                                        <td>@item.Latitude</td>
                                        <td>@item.Longitude</td>
                                        <td>
                                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                                            {
                                                <img src="@item.ImageUrl" alt="Foto" style="max-width:60px;max-height:60px;" />
                                            }
                                        </td>
                                        <td>@item.Description</td>
                                        <td>
                                            <button class="btn btn-sm btn-primary" data-bs-toggle="modal"
                                                data-bs-target="#@modalId">Edit</button>
                                            <a asp-action="DeleteMarker" asp-route-id="@item.Id" class="btn btn-sm btn-danger"
                                                onclick="return confirm('Yakin ingin menghapus data ini?');">Hapus</a>

                                            <div class="modal fade" id="@modalId" tabindex="-1"
                                                aria-labelledby="editModalLabel@item.Id" aria-hidden="true">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <form asp-action="EditMarker" method="post">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="editModalLabel@item.Id">Edit Marker
                                                                </h5>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                                    aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                <input type="hidden" name="Id" value="@item.Id" />
                                                                <div class="mb-3">
                                                                    <label class="form-label">Title</label>
                                                                    <input type="text" class="form-control" name="Title"
                                                                        value="@item.Title" required />
                                                                </div>
                                                                <div class="mb-3">
                                                                    <label class="form-label">Deskripsi</label>
                                                                    <textarea class="form-control" name="Description"
                                                                required>@item.Description</textarea>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="submit" class="btn btn-success">Simpan</button>
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-bs-dismiss="modal">Batal</button>
                                                            </div>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                    </tr>
                                    no++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>