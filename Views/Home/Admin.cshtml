@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Users> signInManager;
@{
    ViewData["Title"] = "Admin Page";
}

<style>
    html,
    body {
        height: 100%;
        width: 100%;
        margin: 0;
        padding: 0;
    }

    .navbar {
        width: 100vw;
        height: 60px;
        background: #222;
        color: #fff;
        display: flex;
        align-items: center;
        padding-left: 32px;
        font-size: 1.5rem;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 10000;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        justify-content: space-between;
        padding-right: 32px;
    }

    .navbar-btn, .navbar-btn:visited {
        color: #fff !important;
        background: transparent;
        border: none;
        font-size: 1rem;
        padding: 8px 18px;
        border-radius: 4px;
        cursor: pointer;
        text-decoration: none;
        transition: background 0.2s, color 0.2s;
        outline: none;
    }
    .navbar-btn:hover, .navbar-btn:focus {
        background: #444;
        color: #ffd700 !important;
        text-decoration: none;
    }
    .logout-btn {
        background: #e74c3c;
        color: #fff;
        border: none;
        padding: 8px 18px;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.2s;
    }
    .logout-btn:hover {
        background: #c0392b;
    }

    .fullscreen-map {
        position: fixed;
        top: 60px;
        left: 0;
        width: 100vw;
        height: calc(100vh - 60px);
        z-index: 9999;
    }

    #map {
        width: 100vw;
        height: 100%;
    }
</style>
<div class="navbar" style="display: flex; justify-content: space-between; align-items: center;">
    <a asp-controller="Home" asp-action="Index" class="navbar-btn" style="font-size:1.5rem; font-weight:bold; text-decoration:none;">Admin Page</a>
    <ul class="navbar-nav ms-auto align-items-center" style="display: flex; gap: 16px; margin: 0; padding: 0; list-style: none;">
        @if (signInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="navbar-btn logout-btn">Logout</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="navbar-btn" asp-controller="Account" asp-action="Login">
                    Login
                </a>
            </li>
            <li class="nav-item">
                <a class="navbar-btn" asp-controller="Account" asp-action="Register">
                    Register
                </a>
            </li>
        }
    </ul>
</div>
<div class="fullscreen-map">
    <div id="map"></div>
</div>
<script
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyD4jqcen5Xqrgck4V73aL6VepyKp2_wK1U&callback=initMap"></script>
<script>
    function initMap() {
        var center = { lat: -6.914744, lng: 107.609810 };
        var map = new google.maps.Map(document.getElementById('map'), {
            zoom: 10,
            center: center
        });
    }
    window.onload = initMap;
</script>
